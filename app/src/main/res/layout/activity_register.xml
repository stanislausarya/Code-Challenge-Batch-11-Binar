<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.RegisterActivity"
        android:background="@android:color/background_light">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/et_registerEmail"
            android:textSize="30sp"
            android:hint=" Email Address"
            android:singleLine="true"
            android:background="@drawable/bg_custom1"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/et_registerName"
            app:layout_constraintStart_toStartOf="@+id/et_registerName"
            app:layout_constraintEnd_toEndOf="@+id/et_registerName" android:inputType="textEmailAddress"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_registerDomain"
            android:textSize="30sp"
            android:hint=" University/Organization"
            android:singleLine="true"
            android:background="@drawable/bg_custom1"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/et_registerEmail"
            app:layout_constraintStart_toStartOf="@+id/et_registerEmail"
            app:layout_constraintEnd_toEndOf="@+id/et_registerEmail"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_registerPassword"
            android:textSize="30sp"
            android:hint=" Password"
            android:singleLine="true"
            android:background="@drawable/bg_custom1"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/et_registerDomain"
            app:layout_constraintStart_toStartOf="@+id/et_registerDomain"
            app:layout_constraintEnd_toEndOf="@+id/et_registerDomain"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/et_checkPassword"
            android:textSize="30sp"
            android:hint=" Confirm Password"
            android:singleLine="true"
            android:background="@drawable/bg_custom1"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/et_registerPassword"
            app:layout_constraintStart_toStartOf="@+id/et_registerPassword"
            app:layout_constraintEnd_toEndOf="@+id/et_registerPassword" android:inputType="textPassword"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_registerName"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="30sp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"
            android:hint=" Full Name"
            android:singleLine="true"
            android:background="@drawable/bg_custom1"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.113"
            app:layout_constraintTop_toBottomOf="@+id/tv_staticRegister"/>
    <TextView
            android:text="Register"
            android:layout_width="138dp"
            android:layout_height="60dp"
            android:id="@+id/tv_staticRegister" android:textSize="36sp"
            android:textStyle="bold" android:textColor="@android:color/black"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ib_backRegister"
            android:textAlignment="center" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="?attr/actionModeCloseDrawable"
            android:id="@+id/ib_backRegister"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.023" android:background="@android:color/transparent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_staticRegister"/>
    <Button
            android:text="REGISTER"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_register" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/et_checkPassword"
            app:layout_constraintStart_toStartOf="@+id/et_checkPassword"
            app:layout_constraintEnd_toEndOf="@+id/et_checkPassword"
            android:textStyle="bold" android:textSize="30sp" android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"/>
</android.support.constraint.ConstraintLayout>