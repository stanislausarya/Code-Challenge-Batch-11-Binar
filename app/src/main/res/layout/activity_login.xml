<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.LoginActivity"
        android:background="@android:color/background_light">
    <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="?attr/actionModeCloseDrawable"
            android:id="@+id/ib_backLogin"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.023" android:background="@android:color/transparent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_staticLogin"/>
    <TextView
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/tv_staticLogin" android:textSize="36sp"
            android:textStyle="bold" android:textColor="@android:color/black"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/ib_backLogin"
    />
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_emailLogin"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="30sp"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="172dp" app:layout_constraintTop_toTopOf="parent"
            android:hint=" Email"
            android:singleLine="true"
            android:background="@drawable/bg_custom1"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.182"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_passwordLogin" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/et_emailLogin" android:textSize="30sp"
            android:hint=" Password"
            android:background="@drawable/bg_custom1"/>
    <Button
            android:text="LOGIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_loginEnd" app:layout_constraintEnd_toEndOf="@+id/et_passwordLogin"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/et_passwordLogin" android:textSize="24sp"/>
</android.support.constraint.ConstraintLayout>