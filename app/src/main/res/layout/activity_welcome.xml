<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.WelcomeActivity"
android:background="@android:color/background_light">

    <ImageView
            android:layout_width="255dp"
            android:layout_height="255dp" app:srcCompat="@drawable/android"
            android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="60dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.316"/>
    <TextView
            android:text="Welcome to Binar App"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_welcome" android:textSize="36sp"
            android:textColor="@android:color/black" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintHorizontal_bias="0.486"/>
    <Button
            android:text="@string/login"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:id="@+id/btn_login"
            android:textSize="24sp"
            android:textColor="@android:color/black" android:textStyle="bold" android:textAlignment="center"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/btn_register"
            app:layout_constraintBottom_toBottomOf="@+id/btn_register"
            app:layout_constraintTop_toTopOf="@+id/btn_register" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="@string/register"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:id="@+id/btn_register"
            android:textSize="24sp"
            android:textColor="@android:color/black" android:textAlignment="center" android:textStyle="bold"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/tv_welcome"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.802"/>
</android.support.constraint.ConstraintLayout>